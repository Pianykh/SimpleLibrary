<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>SimpleLibrary</display-name>

    <servlet>
        <servlet-name>AdminLogin</servlet-name>
        <servlet-class>main.controller.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserLogin</servlet-name>
        <servlet-class>main.controller.UserLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminViewBook</servlet-name>
        <servlet-class>main.controller.AdminViewBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminViewUsers</servlet-name>
        <servlet-class>main.controller.AdminViewUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookDelete</servlet-name>
        <servlet-class>main.controller.BookDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDelete</servlet-name>
        <servlet-class>main.controller.UserDeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserViewBook</servlet-name>
        <servlet-class>main.controller.UserViewBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>main.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBook</servlet-name>
        <servlet-class>main.controller.AddBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>main.controller.AddUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddBook</servlet-name>
        <url-pattern>/AddBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookDelete</servlet-name>
        <url-pattern>/BookDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/AddUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDelete</servlet-name>
        <url-pattern>/UserDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserLogin</servlet-name>
        <url-pattern>/UserLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminLogin</servlet-name>
        <url-pattern>/AdminLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminViewBook</servlet-name>
        <url-pattern>/AdminViewBook</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AdminViewUsers</servlet-name>
        <url-pattern>/AdminViewUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserViewBook</servlet-name>
        <url-pattern>/UserViewBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
</web-app>

